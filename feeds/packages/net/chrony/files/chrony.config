config global 'global'
	option enabled '1'
	option manual '0'
	option manual_completed '0'

config pool
	option hostname 'kr.pool.ntp.org'
	option maxpoll '12'
	option iburst 'yes'

config dhcp_ntp_server
	option iburst 'yes'
	option disabled 'no'
	option prefer 'yes'

config allow
	option interface 'LAN'

config makestep
	option threshold '1.0'
	option limit '3'

